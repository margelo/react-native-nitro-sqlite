{
  "name": "react-native-quick-sqlite",
  "version": "8.2.3",
  "description": "Fast SQLite for react-native",
  "source": "./src/index.ts",
  "main": "./lib/commonjs/index",
  "module": "./lib/module/index",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/typescript/index.d.ts",
        "default": "./lib/module/index.js"
      },
      "require": {
        "types": "./lib/typescript/index.d.ts",
        "default": "./lib/commonjs/index.js"
      }
    }
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "react-native-quick-sqlite.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!android/.cxx",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "postinstall": "bun build || exit 0;",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\" --fix",
    "lint-ci": "eslint \"**/*.{js,ts,tsx}\" -f @jamesacarr/github-actions",
    "prepare": "rm -rf lib && bun typescript && bob build",
    "test": "jest",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/margelo/react-native-quick-sqlite.git"
  },
  "author": "Marc Rousavy <me@mrousavy.com> (https://github.com/mrousavy)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/margelo/react-native-quick-sqlite/issues"
  },
  "homepage": "https://github.com/margelo/react-native-quick-sqlite#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "jest": "*",
    "react": "*",
    "react-native": "*",
    "react-native-builder-bob": "^0.31.0"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-native": ">=0.74.0"
  },
  "resolutions": {
    "@types/react": "^18.2.44"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "release-it": {
    "npm": {
      "publish": true,
      "publishPackageManager": "bun"
    },
    "git": false,
    "github": {
      "release": false
    },
    "hooks": {
      "before:init": "bun typescript && bun lint",
      "after:bump": "bun run build"
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "tsc": "../node_modules/.bin/tsc",
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
